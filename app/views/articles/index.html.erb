<div class="ribbon">
  <h3>作品一覧</h3>
</div>

<table>
  <tr>
    <table border="3">
    <th>作品名</th>
    <th>紹介文</th>
    <th>投稿時間</th>
    <th colspan="3">アクションボタン</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
       <td><%= article.title %></td>
       <td><%= article.text %></td>
       <td><%= article.created_at %></td>
       <td><%= link_to '閲覧/レビュー追加', article_path(article) %></td>
       <td><%= link_to '編集', edit_article_path(article) %></td>
       <td><%= link_to '削除', article_path(article),
                    method: :delete, data: { confirm: '作品概要、またそれに紐づくレビューを全て削除してもよろしいですか？' } %></td>

    </tr>
  <% end %>
</table>

<br>
<%= link_to '作品追加', new_article_path %>
<br>

<div class="ribbon">
  <h3>新しく追加された作品</h3>
</div>

<table>
  <tr>
    <th>タイトル</th>
    <th>本文</th>
    <th>投稿時間</th>
  </tr>
  <tr>
  <td><%= @titlelatest.title %></td>
  <td><%= @titlelatest.text %></td>
  <td><%= @titlelatest.created_at %></td>
  </tr>
  </table>
  <br>

  <div class="ribbon">
  <h3>最新レビュー</h3>
  </div>

  <table>
  <tr>
    <th>ユーザー</th>
    <th>レビュー</th>
    <th>スター</th>
    <th>投稿時間</th>
  </tr>
  <tr>
  <td><%= @reviewlatest.commenter %></td>
  <td><%= @reviewlatest.body %></td>
  <td><%= @reviewlatest.restars %></td>
  <td><%= @reviewlatest.created_at %></td>
  </tr>
